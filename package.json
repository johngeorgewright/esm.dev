{
  "name": "esm.dev",
  "version": "2.0.7",
  "description": "TypeScript library template",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./dist/lib/index.js"
  },
  "bin": {
    "esm.dev": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "esm.dev": "node ./src/cli.ts",
    "prepare": "husky",
    "start": "docker compose up --detach --remove-orphans",
    "stop": "docker compose down",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/esm.dev.git"
  },
  "keywords": [],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/esm.dev/issues"
  },
  "homepage": "https://github.com/johngeorgewright/esm.dev#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@commitlint/types": "^20.4.0",
    "@types/http-proxy": "^1.17.16",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.11.0",
    "@types/ramda": "^0.31.0",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "npx prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "clipanion": "^4.0.0-rc.4",
    "clipanion-generator-command": "^1.3.1",
    "es-toolkit": "^1.39.10",
    "escape-string-regexp": "^5.0.0",
    "glob": "^13.0.6",
    "http-proxy": "^1.18.1",
    "ignore": "^7.0.4",
    "minimatch": "^10.0.1",
    "minipass": "^7.1.2",
    "mustache": "^4.2.0",
    "npm": "^11.4.1",
    "ramda": "^0.32.0",
    "tslib": "^2.8.1",
    "typanion": "^3.14.0",
    "update": "^0.7.4",
    "zx": "^8.5.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-musl": "^4.41.1"
  }
}
